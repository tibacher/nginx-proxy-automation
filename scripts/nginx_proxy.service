[Unit]
Description=Docker - nginx proxy container
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
Environment="NGINX_DOCKER=/docker/proxy/"
ExecStart=/docker/proxy/scripts/start.sh
ExecStop=/docker/proxy/scripts/stop.sh

[Install]
WantedBy=default.target
				
